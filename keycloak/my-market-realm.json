{
  "realm": "my-market",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": false,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "clients": [
    {
      "clientId": "market-app-client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "secret": "market-app-secret",
      "redirectUris": [
        "http://localhost:8080/*",
        "http://localhost:8080/login/oauth2/code/keycloak",
        "http://my-market-app:8080/*"
      ],
      "webOrigins": [
        "http://localhost:8080",
        "http://my-market-app:8080"
      ],
      "frontchannelLogout": true,
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:8080/* http://my-market-app:8080/*",
        "access.token.lifespan": "300"
      },
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    },
    {
      "clientId": "payment-service-client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "secret": "payment-service-secret",
      "attributes": {
        "access.token.lifespan": "300"
      },
      "defaultClientScopes": [
        "web-origins",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "User role"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      },
      {
        "name": "service",
        "description": "Service account role"
      }
    ]
  },
  "defaultRoles": [
    "user"
  ],
  "users": [
    {
      "username": "user1",
      "enabled": true,
      "email": "user1@example.com",
      "firstName": "User",
      "lastName": "One",
      "credentials": [
        {
          "type": "password",
          "value": "password1",
          "temporary": false
        }
      ],
      "realmRoles": ["user"]
    },
    {
      "username": "user2",
      "enabled": true,
      "email": "user2@example.com",
      "firstName": "User",
      "lastName": "Two",
      "credentials": [
        {
          "type": "password",
          "value": "password2",
          "temporary": false
        }
      ],
      "realmRoles": ["user"]
    },
    {
      "username": "user3",
      "enabled": true,
      "email": "user3@example.com",
      "firstName": "User",
      "lastName": "Three",
      "credentials": [
        {
          "type": "password",
          "value": "password3",
          "temporary": false
        }
      ],
      "realmRoles": ["user"]
    }
  ]
}
